<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp"
              android:orientation="vertical"
              tools:context=".AddBillActivity">

    <RadioGroup
            android:id="@+id/add_bill_radio_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:checkedButton="@id/add_bill_radio_outcome"
            android:layout_height="wrap_content" android:layout_marginBottom="16dp">
        <RadioButton
                android:id="@+id/add_bill_radio_outcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outcome" android:layout_marginEnd="160dp"/>
        <RadioButton
                android:id="@+id/add_bill_radio_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"/>
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/add_bill_rec_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
    />

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="240dp" android:background="#ccccff">
        <SeekBar
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="16"
                android:progress="8"
                android:id="@+id/add_sb_money"/>
        <TextView android:id="@+id/add_show_now_money" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="16dp" android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>